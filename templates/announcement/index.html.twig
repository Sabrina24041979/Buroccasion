{% extends 'base.html.twig' %}

{% block title %}Announcement index{% endblock %}

{% block body %}
    <h1>Announcement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Descriptiion</th>
                <th>Price</th>
                <th>Related_product</th>
                <th>Brand</th>
                <th>Image</th>
                <th>Status</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for announcement in announcements %}
            <tr>
                <td>{{ announcement.id }}</td>
                <td>{{ announcement.name }}</td>
                <td>{{ announcement.slug }}</td>
                <td>{{ announcement.descriptiion }}</td>
                <td>{{ announcement.price }}</td>
                <td>{{ announcement.relatedProduct }}</td>
                <td>{{ announcement.brand }}</td>
                <td>{{ announcement.image ? announcement.image|join(', ') : '' }}</td>
                <td>{{ announcement.status }}</td>
                <td>{{ announcement.createdAt ? announcement.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ announcement.updatedAt ? announcement.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_announcement_show', {'id': announcement.id}) }}">show</a>
                    <a href="{{ path('app_announcement_edit', {'id': announcement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_announcement_new') }}">Create new</a>
{% endblock %}
