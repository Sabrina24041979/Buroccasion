{% extends 'base.html.twig' %}

{% block title %}Announcements{% endblock %}

{% block body %}
    <h1>Announcements</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ announcement.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ announcement.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ announcement.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ announcement.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ announcement.price }}</td>
            </tr>
            <tr>
                <th>RelatedProducts</th>
                <td>{{ announcement.relatedProducts }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ announcement.brand }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>{{ announcement.images }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ announcement.status }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ announcement.createdAt ? announcement.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ announcement.updatedAt ? announcement.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_announcements_index') }}">back to list</a>

    <a href="{{ path('app_announcements_edit', {'id': announcement.id}) }}">edit</a>

    {{ include('announcements/_delete_form.html.twig') }}
{% endblock %}
