{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
{% include "page_head/page_head.html.twig" with {'page_name' : 'Formulaire de connexion '} %}

<div class="main_content">
    <div class="login_register_wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-10">
                    <div class="login_wrap">
                        <div class="padding_eight_all bg-white">
                            <div class="heading_s1">
                                <h3>Formulaire de connexion</h3>
                            </div>
                            <form method="POST" class="ng-untouched ng-pristine ng-invalid">

                                {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}

                                {% if app.user %}
                                    <div class="mb-3">
                                        Vous êtes connecté en tant que{{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                                    </div>
                                {% endif %}

                                <div class="form-group mb-3"><input type="text" required="" name="email"
                                        formcontrolname="email" placeholder="Your Email"
                                        class="form-control ng-untouched ng-pristine ng-invalid" value="{{ last_username }}" autocomplete="email" required autofocus>
                                </div>
                                <div class="form-group mb-3"><input required="" type="password"
                                        formcontrolname="password" name="password" placeholder="Password"
                                        class="form-control ng-untouched ng-pristine ng-invalid" autocomplete="email" required autofocus>
                                </div>
                                {# <div class="login_footer form-group mb-3">
                                    <div class="chek-form">
                                        <div class="custome-checkbox"><input type="checkbox" name="checkbox"
                                                id="exampleCheckbox1" value="" class="form-check-input"><label
                                                for="exampleCheckbox1" class="form-check-label"><span>Remember
                                                    me</span></label></div>
                                    </div><a href="#">Forgot password?</a>
                                </div> #}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                <div class="form-group mb-3"><button type="submit" name="login"
                                        class="btn btn-fill-out btn-block">Connexion</button></div>
                            </form>
                            <div class="different_login"><span>
                                    OU</span></div>
                            {# <ul class="btn-login list_none text-center">
                                <li><a href="#" class="btn btn-facebook"><i class="ion-social-facebook"></i>Facebook</a>
                                </li>
                                <li><a href="#" class="btn btn-google"><i class="ion-social-googleplus"></i>Google</a>
                                </li>
                            </ul> #}
                            <div class="form-note text-center">Vous n'avez pas de compte? <a href="/register">Inscrivez-vous maintenant</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
