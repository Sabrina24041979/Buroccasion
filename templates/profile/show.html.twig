{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <h1>Profile</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ profile.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ profile.pseudo }}</td>
            </tr>
            <tr>
                <th>Civility</th>
                <td>{{ profile.civility }}</td>
            </tr>
            <tr>
                <th>Fullname</th>
                <td>{{ profile.fullname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ profile.lastname }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ profile.adress }}</td>
            </tr>
            <tr>
                <th>Adress_additional</th>
                <td>{{ profile.adressAdditional }}</td>
            </tr>
            <tr>
                <th>Postal_code</th>
                <td>{{ profile.postalCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ profile.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ profile.country }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ profile.createdAt ? profile.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ profile.updatedAt ? profile.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_profile_index') }}">back to list</a>

    <a href="{{ path('app_profile_edit', {'id': profile.id}) }}">edit</a>

    {{ include('profile/_delete_form.html.twig') }}
{% endblock %}
